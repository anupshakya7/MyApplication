<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="40dp"
    tools:context=".Addition">

    <TextView
        android:id="@+id/firstNumber"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="First Number:"
    android:textSize="17dp"
    android:textColor="#B85B5B"
    />

    <EditText
        android:id="@+id/first"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/firstNumber"
        />

    <TextView
        android:id="@+id/secondNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstNumber"
        android:layout_marginTop="30dp"
        android:text="Second Number:"
        android:textSize="17dp"
        android:textColor="#B85B5B"
        />
    <EditText
        android:id="@+id/second"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:textSize="17dp"
        android:layout_height="40dp"
        android:layout_below="@+id/firstNumber"
        android:layout_toRightOf="@+id/secondNumber"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="50dp"
        android:background="#B66B6B"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_below="@+id/secondNumber"
        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="Ans is :"
        android:textColor="#140101"
        android:textSize="20dp"

        />


</RelativeLayout>